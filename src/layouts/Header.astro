---
import "../styles/site.scss";

interface Props {
	title: string;
	icon?: string;
}

const { title, icon = "/incident-counter/favicon.svg" } = Astro.props;
---

<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8" />
		<meta name="author" content="Dionisis Toulatos" />
		<meta name="description" content="We don't talk about it" />
		<meta name="generator" content={Astro.generator} />
		<meta name="color-scheme" content="light dark" />
		<meta name="viewport" content="width=device-width" />
		<title>{title}</title>
		<link rel="icon" href={icon} />
	</head>
	<slot />
</html>
